			if(hm.containsKey(x))
			{
				hm.remove(x);
			}
			
		case 2:
			System.out.println("Enter the id of the item which u want to remove:");
			Scanner ss=new Scanner(System.in);
			int y=ss.nextInt();
			if(hm.containsKey(y))
			{
				hm.remove(y);
			}
			
